<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="invoice.metadata.InvoiceMetadataController">
    <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label fx:id="invoiceIdLabel" text="%invoiceId"/>
        <TextField fx:id="invoiceIdTextField"/>
        <Label text="%invoiceCustomerId"/>
        <TextField fx:id="invoiceCustomerTextField"/>
        <HBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
            <RadioButton fx:id="invoiceRetailRadioButton" text="%invoiceRetail">
                <toggleGroup>
                    <ToggleGroup fx:id="invoiceGroup"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="invoiceWholesaleRadioButton" text="%invoiceWholesale"
                         toggleGroup="$invoiceGroup"/>
        </HBox>
        <HBox spacing="10.0">
            <Button maxWidth="1.7976931348623157E308" text="%continue" HBox.hgrow="ALWAYS"/>
            <Button maxWidth="1.7976931348623157E308" text="%cancel" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>
</AnchorPane>
